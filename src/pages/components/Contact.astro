<section id="contact" class="contact">
    <div class="container">
        <h2>Contact Us</h2>
        <p>Have questions or want to collaborate? Reach out!</p>
        <a href="mailto:hello@beboss.com" class="email-link">hello@beboss.com</a>
    </div>
</section>

<style>
    .contact {
        padding: 4rem 1rem;
        text-align: center;
        background-color: #f9f9f9;
    }
    .container {
        max-width: 800px;
        margin: 0 auto;
    }
    h2 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }
    p {
        font-size: 1.1rem;
        color: #555;
        margin-bottom: 1.5rem;
    }
    .email-link {
        font-size: 1.2rem;
        font-weight: bold;
        color: #007bff;
        text-decoration: none;
    }
    .email-link:hover {
        text-decoration: underline;
    }
</style>