---
// src/layouts/Layout.astro
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro'; // This is your CTA footer for the homepage
import PageFoot from '@/components/PageFoot.astro'; // <-- 1. IMPORT THE NEW FOOTER
import iconPng from '@/assets/icon.png';

// The 'title' prop allows each page to have a custom browser tab title.
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href={iconPng.src} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Google Fonts: Montserrat -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700;800&display=swap" rel="stylesheet">
    
    <style is:global>
      :root {
        font-family: system-ui, sans-serif;
        line-height: 1.5;
      }
body {
        margin: 0;
        padding-top: 80px; /* Keep this for the fixed header */
        
        /* --- NEW BACKGROUND STYLES --- */
        background-color: #1a1a1a;
        color: #f0f0f0; /* Change default text to light grey */

        /* This creates the dot grid with CSS gradients */
        background-image: radial-gradient(circle, #555555 1px, transparent 1px);
        background-size: 20px 20px; /* The spacing of the dots */
      }
      h1, h2, h3, p { margin: 0; }
      html { scroll-behavior: smooth; }
    </style>
  </head>
  <body>
    <Header />
    <main>
     <slot/> <!-- The <slot /> is a placeholder where your page content will be injected. -->
    </main>
    <PageFoot /> <!-- <-- 2. USE THE NEW FOOT  COMPONENT -->
  </body>
</html>