---
// src/components/Header.astro
import { Image } from 'astro:assets';
import logoSrc from '@/assets/logo.png'; // <-- Correct
---

<header class="site-header">
  <div class="container">
    <a href="/" class="logo-link">
      <Image src={logoSrc} alt="BOSS Logo" class="logo-img" />
    </a>
  </div>
</header>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    
    /* Using a semi-transparent version of your background color */
    background-color: rgba(26, 26, 26, 0.7); 
    backdrop-filter: blur(5px); /* Adds a modern "glass" effect */
    border-bottom: 1px solid var(--color-border);
    height: 80px; 
  }

  .site-header .container {
    display: flex;            /* Activates Flexbox */
    justify-content: flex-start; /* THE FIX: Aligns content to the left */
    align-items: center;      /* Vertically centers the logo */
    
    height: 100%; /* Make the container fill the header's height */
    max-width: var(--container-width-wide); /* Use your theme's wide container */
    margin: 0 auto; /* Center the container itself on the page */
    padding: 0 var(--spacing-l-xl); /* Add side padding from your theme */
  }


  .logo-img {
    height: 60px; /* 70px is a bit large for an 80px header; 45px provides nice balance */
    width: auto;
  }
</style>