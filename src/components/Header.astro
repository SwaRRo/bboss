---
// src/components/Header.astro
import { Image } from 'astro:assets';
import logoSrc from '@/assets/logo.png'; // <-- Correct
---

<header class="site-header">
  <div class="container">
    <a href="/" class="logo-link">
      <Image src={logoSrc} alt="BOSS Logo" class="logo-img" />
    </a>
  </div>
</header>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100; /* Ensures it stays on top of all other content */
    
    background-color: #1a1a1a77;
    box-shadow: 0 3px 5px rgba(0, 0, 0, 0.25); /* Adds a subtle shadow for depth */

    /* Let's define a clear height for the header */
    height: 80px; 
    
  }

  .logo-img {
    height: 70px; /* Adjust this value if your logo looks too big or small */
    width: auto;
    justify-content: left;
  }
</style>