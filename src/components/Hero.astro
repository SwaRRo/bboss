---
// src/components/Hero.astro
---
<section class="hero">
  <div class="container">
    <h1 class="title">Business Optimization & Scaling System</h1>
    <p class="subtitle">
      We provide tools & techniques for you to become the BOSS.
    </p>
  </div>
</section>

<style>
  .hero {
    background-color: var(--color-surface-dark);
    color: var(--color-text-light);
    text-align: center;
    padding: var(--spacing-xxl) var(--spacing-md);
    box-shadow: var(--shadow-inner);
  }

  /*
   * We can now DELETE the .container rule from this file!
   * It gets its styling from our global utility class in Layout.astro.
   */

  .title {
    font-size: var(--font-size-h1);
    font-weight: 800; /* font-weight is usually kept specific to the component */
    margin-bottom: var(--spacing-md);
    line-height: 1.2;
  }
  .subtitle {
    font-size: var(--font-size-large);
    color: var(--color-text-dim);
    margin-bottom: var(--spacing-lg); /* Using a standard spacing unit */
    max-width: var(--container-width-extra-narrow);
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 600px) {
    .title {
      font-size: var(--font-size-h2); /* Re-using an existing variable */
    }
  }
</style>