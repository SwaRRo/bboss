// src/components/Hero.astro
---
<section class="hero">
  <div class="container">
    <h1 class="title">Business Optimization & Scaling System</h1>
    <p class="subtitle">
      We provide tools & techniques for you to become the BOSS.
  </div>
</section>

<style>
  .hero {
    background-color: #1a1a1a;
    color: #f0f0f0;
    text-align: center;
    padding: 6rem 1rem;
  }
  .container {
    max-width: 800px;
    margin: 0 auto;
  }
  .title {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1rem;
    line-height: 1.2;
  }
  .subtitle {
    font-size: 1.25rem;
    color: #b3b3b3;
    margin-bottom: 2.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 600px) {
    .title {
      font-size: 2.5rem;
    }
  }
</style>