---
// src/components/PageFoot.astro
const currentYear = new Date().getFullYear();
---
<footer class="page-footer">
  <div class="container">
    <p>&copy; {currentYear} BOSS. All Rights Reserved.</p>
  </div>
</footer>

<style>
  .page-footer {
    background-color: var(--color-accent);
    border-top: 1px solid var(--color-border);
    text-align: center;
    padding: var(--spacing-lg) var(--spacing-md);
  }

  /*
   * We can DELETE the .container rule from this component.
   * The HTML <div class="container"> automatically inherits
   * the correct styling from our global theme file.
   */

  p {
    /* The global "p { margin: 0; }" already handles the margin. */
    font-size: var(--font-size-small);
    color: var(--color-text-light);
  }
</style>