---
// src/components/Newsletter.astro
import Parser from 'rss-parser';
const parser = new Parser();

let posts: any[] = [];
// This is the public RSS feed for your Substack publication.
const SUBSTACK_URL = 'https://bossystem.substack.com/feed';

try {
    // Fetch and parse the feed during the build.
    const feed = await parser.parseURL(SUBSTACK_URL);
    // We'll just take the 3 most recent posts. Change slice(0, 2) to show more or less.
    posts = feed.items.slice(0, 2); 
} catch (error) {
    // If the feed fails, we log the error and show nothing, preventing the site from crashing.
    console.error("Failed to fetch Substack feed:", error);
}
---

<section class="newsletter">
  <div class="container">
    <h2>From the Newsletter</h2>
    <div class="card-grid">
      {posts.length > 0 ? (
        posts.map(post => (
          <a href={post.link} target="_blank" rel="noopener noreferrer" class="card">
            <div class="card-content">
              <h3>{post.title}</h3>
              <p class="card-date">
                {new Date(post.isoDate).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
                })}
              </p>
              <p>{post.contentSnippet?.substring(0, 120)}...</p>
              <span class="read-more">Click to read more &rarr;</span>
            </div>
          </a>
        ))
      ) : (
        <p>Could not load articles at this time. Please check back later.</p>
      )}
    </div>
  </div>
</section>

<style>
  .newsletter {
    padding: var(--spacing-xl) var(--spacing-md);
  }
  .container-wide {
    text-align: center; /* We only need to add the specific alignment here */
  }
  h2 {
    /* The font, size, and color are inherited from the global h2 style! */
    margin-bottom: var(--spacing-lg); /* 2rem is not a standard unit, using 1.5rem for consistency */
  }
  .card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-lg);
    text-align: left;
  }
  .card {
    background-color: var(--color-surface-dark);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-md);
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    transition: var(--transition-card);
  }
  .card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-card-hover);
  }
  .card-content {
    padding: var(--spacing-lg);
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  .card h3 {
    /* The font, size, and color are inherited from the global h3 style! */
    margin-bottom: var(--spacing-sm);
  }
  .card p {
    color: var(--color-text-dim); /* Using a standard text color */
    line-height: 1.6;
    flex-grow: 1;
    margin-bottom: var(--spacing-md);
  }
  .card-date {
      font-size: var(--font-size-small);
      color: var(--color-text-dim);
      opacity: 0.8; /* Makes the date slightly less prominent */
      margin-top: -0.25rem;
      margin-bottom: var(--spacing-md);
  }
  .read-more {
    font-weight: bold;
    color: var(--color-accent);
    margin-top: auto;
  }
</style>